#!/bin/sh
# execute freetts with the correct classpath
BASE=`dirname $0`/../
LIBDIR="$BASE/lib"
JARS=`ls $LIBDIR/*.jar | xargs echo | sed 's/ /:/g'`
if [ -z "${JAVA_HOME}" ] ; then
    JAVA_HOME=/lab/speech/java/j2sdk1.4.0
fi
${JAVA_HOME}/bin/java -Xms64m -ea -cp $JARS \
	-Dmbrola.base=${MBROLA_DIR} \
	$@
